<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CountriesApp.Views.CountriesPage"
             xmlns:local ="clr-namespace:CountriesApp.Views"
             BarBackgroundColor="#084c9e"
             BarTextColor="White"
             Title="Countries"
             Icon="ic_launcher.png"
             BindingContext="{Binding Main, Source={StaticResource Locator}}">
    
    <TabbedPage.ToolbarItems >
        <ToolbarItem Name="iconexample" Icon="ic_shortcut_settings.png" Priority="0" Order="Primary"></ToolbarItem>
    </TabbedPage.ToolbarItems>
    
    <TabbedPage.Children>
        <local:AfricaPage/>
        <local:AmericasPage/>
        <local:AsiaPage/>
        <local:EuropePage/>
        <local:OceaniaPage/>
    </TabbedPage.Children>

</TabbedPage>